<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/panel">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/panel"
                android:paddingLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_gravity="left"
                    android:text="Favourate : "
                    android:gravity="center"
                    android:layout_height="fill_parent" />
                <Spinner

                    android:id="@+id/spinnerFavourite"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:entries="@array/comp_arrays"
                    android:prompt="@string/favourate_prompt">

                </Spinner>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/panel">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/panel"
                android:paddingLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_gravity="left"
                    android:text="Load favourite (app start) : "
                    android:gravity="center"
                    android:layout_height="fill_parent" />
                <Spinner

                    android:id="@+id/spinnerInitialLoad"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:entries="@array/yes_no"
                    android:prompt="@string/load_prompt">

                </Spinner>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/panel">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/panel"
                android:paddingLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_gravity="left"
                    android:text="When to update : "
                    android:gravity="center"
                    android:layout_height="fill_parent" />
                <Spinner

                    android:id="@+id/spinnerUpdate"
                    android:layout_width="fill_parent"
                    android:layout_gravity="right"
                    android:layout_height="fill_parent"
                    android:entries="@array/update_options"
                    android:prompt="@string/update_prompt">

                </Spinner>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/panel">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/panel"
                android:paddingLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show : " />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/panel"
                    android:paddingLeft="4dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/cmbLogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="0"
                        android:text="Logs" />
                    <CheckBox
                        android:id="@+id/cmbResults"
                        android:tag="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Results" />
                    <CheckBox
                        android:id="@+id/cmbFixtures"
                        android:tag="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fixtures" />
                    <CheckBox
                        android:id="@+id/cmbLive"
                        android:tag="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live" />
                    <CheckBox
                        android:id="@+id/cmbScorers"
                        android:tag="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal scorers" />

                    <CheckBox
                        android:id="@+id/cmbNews"
                        android:tag="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="News" />
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
</ScrollView>