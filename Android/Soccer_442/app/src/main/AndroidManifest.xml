<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.wifi" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".Home"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.home" />
            </intent-filter>
        </activity>

        <activity
            android:name=".results_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.results_activity" />
            </intent-filter>
        </activity>



        <activity
            android:name=".settings_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.settings_activity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".fixtures_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.fixtures_activity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".summary_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity
            android:name=".log_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.log_activity" />

            </intent-filter>
        </activity>

        <activity
            android:name=".scorer_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.scorer_activity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".live_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.live_activity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity_live_commentry"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.activity_live_commentry" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity_past_commentry"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.activity_past_commentry" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity_competition_menu"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.activity_competition_menu" />
            </intent-filter>
        </activity>

        <activity
            android:name=".news_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.news_activity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity_news_article"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.activity_news_article" />
            </intent-filter>
        </activity>

    </application>

</manifest>